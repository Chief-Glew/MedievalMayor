<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="medievalMayor">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>com.fdmgroup.medievalmayor.game.city.City</class>
		<class>com.fdmgroup.medievalmayor.game.resourceproducers.ResourceProducer</class>
		<class>com.fdmgroup.medievalmayor.game.resourceproducers.Farm</class>
		<class>com.fdmgroup.medievalmayor.game.resourceproducers.Mine</class>
		<class>com.fdmgroup.medievalmayor.game.resourceproducers.resources.ResourceStorageHandler</class>
		<class>com.fdmgroup.medievalmayor.game.resourceproducers.resources.Resource</class>
		<class>com.fdmgroup.medievalmayor.game.resourceproducers.Forest</class>
		<class>com.fdmgroup.medievalmayor.game.resourceproducers.LumberMill</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="oracle.jdbc.driver.OracleDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521/xe" />
			<property name="javax.persistence.jdbc.user" value="USERNAME" />
			<property name="javax.persistence.jdbc.password" value="A_TOTALLY_SECURE_PASSWORD" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="create" />  
		</properties>

	</persistence-unit>
</persistence>