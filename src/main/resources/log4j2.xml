		</Logger>

		<Logger name="ResourceBuilding.class" level="trace" additivity="false">
			<AppenderRef ref="File" />
			<AppenderRef ref="Console" />
		</Logger>

		<Logger name="Building.class" level="trace" additivity="false">
			<AppenderRef ref="File" />
			<AppenderRef ref="Console" />
		</Logger>

		<Logger name="ClientCommand.class" level="trace" additivity="false">
			<AppenderRef ref="File" />
			<AppenderRef ref="Console" />
		</Logger>

		<Logger name="CommandInvoker.class" level="trace" additivity="false">
			<AppenderRef ref="File" />
